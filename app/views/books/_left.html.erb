<h2>User Info</h2>
<div class="profile-image">
  <%= image_tag user.get_profile_image, size: "100x100" %>
  <span class="border-bottom"></span>
</div>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
      <span class="border-bottom"></span>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
<h2 class="mt-3">New Book</h2>
<% if newbook.errors.any? %>
  <p><%= newbook.errors.count %>件のエラーが発生しました</p>
  <% newbook.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: newbook do |f| %>
  <div class="form-group">
    <%= f.label :Title %><br>
    <%= f.text_field :title ,class: 'form-control'%>
  </div>
  <div class="form-group">
  <%= f.label :Opinion %><br>
    <%= f.text_area :body , class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book", class: 'btn btn-success'%>
  </div>
<% end %>